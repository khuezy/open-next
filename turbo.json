{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "APP_DIR_ONLY_URL",
    "PAGES_ONLY_URL",
    "APP_DIR_AND_PAGES_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "e2e:test": {
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}